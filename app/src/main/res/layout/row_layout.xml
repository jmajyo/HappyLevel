<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#999999"    >

    <TextView
        android:id="@+id/row_layout___date_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:text="09/02"
        android:textSize="20sp"
        android:textColor="#111111"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/row_layout___hours_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:text="11:04"
        android:textSize="20sp"
        android:textColor="#111111"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/row_layout___sad_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/row_layout___date_text"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/sad_gray"/>
    <ImageView
        android:id="@+id/row_layout___neutral_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/row_layout___date_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/normal_gray"
        />
    <ImageView
        android:id="@+id/row_layout___happy_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/row_layout___date_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/happy_gray"/>

</RelativeLayout>